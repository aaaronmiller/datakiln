{
  "manifest_version": 3,
  "name": "DataKiln Workflow Assistant",
  "version": "2.0",
  "description": "Enhanced AI chat integration with workflow execution capabilities",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "http://localhost:3000/*",
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    },
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["youtube-content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "DataKiln Workflow Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["workflow-templates.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
