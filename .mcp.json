        "get_system_patterns",
        "log_system_pattern",
        "search_project_glossary_fts",
        "delete_custom_data",
        "delete_progress_by_id",
        "get_active_context",
        "log_progress",
        "log_custom_data",
        "get_custom_data",
        "export_conport_to_markdown",
        "import_markdown_to_conport",
        "semantic_search_conport",
        "get_workspace_detection_info",
        "get_conport_schema",
        "delete_system_pattern_by_id",
        "delete_decision_by_id",
        "get_item_history",
        "get_linked_items",
